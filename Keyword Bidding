if(kw30[x][2]<0&&bidHolder>0){kw30[x][2]=0}
if(kw30[x][2]>0&&bidHolder<0){kw30[x][2]=0}
(y=kwAll.length)}}}}}
  
for(x=0;x<kw30.length;x++){var bidHolder=kw30[x][2];kw30[x][2]=0;
